<?xml version="1.0"?> 
<config>
  <modules>
      <Optimus_Mixpanel> 
          <version>0.1.0</version>
          <depends>
              <!-- no dependencies --> 
          </depends>
      </Optimus_Mixpanel> 
  </modules>
  <global> 
   
    <blocks>
        <adminhtml>
            <rewrite>
            </rewrite>
        </adminhtml>
    </blocks>
    
    <blocks>
        <mixpanel> 
            <class>Optimus_Mixpanel_Block</class>
        </mixpanel> 
    </blocks>
    <helpers>
        <mixpanel>
          <class>Optimus_Mixpanel_Helper</class>
        </mixpanel>
    </helpers>

    <events>
      <checkout_onepage_controller_success_action>
          <observers>
              <optimus_mixpanel_order_success>
                  <class>Optimus_Mixpanel_Model_Observer</class>
                  <method>trackOrderSuccess</method>
              </optimus_mixpanel_order_success>
          </observers>
      </checkout_onepage_controller_success_action>
    </events>
  </global>
  <adminhtml>
      <acl>
          <resources>
              <admin>
                  <children>
                      <system>
                          <children>
                              <config>
                                  <children>
                                      <mixpanel>
                                          <title>Mixpanel Settings</title>
                                      </mixpanel>
                                  </children>
                              </config>
                          </children>
                      </system>
                  </children>
              </admin>
          </resources>
      </acl>
      <events></events> 
      <translate></translate>
  </adminhtml>
    <frontend>
        <routers></routers>
        <events></events>
        <translate></translate>
        <layout>
            <updates>
                <mixpanel>
                    <file>optimus/mixpanel.xml</file>
                </mixpanel>
            </updates>
        </layout>
    </frontend>
  <admin>
       <routers>
          <mixpanel>
              <use>admin</use>
              <args>
                  <module>Optimus_Mixpanel</module>
                  <frontName>mixpanel</frontName>
              </args>
          </mixpanel>
      </routers>
  </admin>
  <!-- module defaults --> 
  <default>
      <!-- config values -->
      <mixpanel>
          <track>
            <mixpanel_on><![CDATA[]]></mixpanel_on>
            <mixpanel_code><![CDATA[]]></mixpanel_code>
            <mixpanel_name><![CDATA[]]></mixpanel_name>
          </track>
      </mixpanel>
  </default>
