      <jobs>
          <get_mixpanel_view>
              <schedule><cron_expr>*/2 * * * *</cron_expr></schedule>
              <run><model>mixpanel/observer::cacheFeeds</model></run>
          </get_mixpanel_view>
      </jobs>
  </crontab>-->
</config>